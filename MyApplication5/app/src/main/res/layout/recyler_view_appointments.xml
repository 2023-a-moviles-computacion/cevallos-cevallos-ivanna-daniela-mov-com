<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    android:layout_margin="2dp">

    <!-- Horizontal LinearLayout to split the CardView into two halves -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- First Half -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- First Plain Text -->
            <TextView
                android:id="@+id/txt_name_doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="nAME OF THE DOCTOR"
                android:textSize="16sp" /> <!-- Adjust text size as needed -->

            <!-- Second Plain Text -->
            <TextView
                android:id="@+id/txt_category_doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sPECIALITY OF THE DOCTOR"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Second Half -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_hour_appointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOUR"
                android:textSize="40sp" />
            <TextView
                android:id="@+id/txt_minute_appointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MINUTE"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
